<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_form_inherit_visible_apps" model="ir.ui.view">
        <field name="name">res.users.form.visible.apps</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='group_ids']" position="after">
                <field
                    name="visible_app_menu_ids"
                    widget="many2many_tags"
                    domain="[('parent_id', '=', False), ('active', '=', True)]"
                    options="{'no_create': True, 'no_create_edit': True}"
                    placeholder="Leave empty to show all apps"
                />
            </xpath>
        </field>
    </record>
</odoo>
